{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

<div
  class="utility-bar color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator and section.blocks.size > 0 %} utility-bar--bottom-border{% elsif section.settings.show_line_separator and section.settings.show_social and social_icons%} utility-bar--bottom-border-social-only{% endif %}{% if section.settings.enable_country_selector or section.settings.enable_language_selector %} header-localization{% endif %}"
>
  <div class="page-width utility-bar__grid{% if announcement_bar and language_country_selector or section.settings.show_social and social_icons %} utility-bar__grid--3-col{% elsif language_country_selector or section.settings.show_social and social_icons %} utility-bar__grid--2-col{% endif %}">
    {%- if section.settings.show_social and social_icons -%}
      {%- render 'social-icons' -%}
    {%- endif -%}
    {%- if section.blocks.size == 1 -%}
      {% comment %}
        <div
          class="announcement-bar{% if section.settings.show_social %} announcement-bar--one-announcement{% endif %}"
          role="region"
          aria-label="{{ 'sections.header.announcement' | t }}"
          {{ section.blocks.first.shopify_attributes }}
        >
          {%- if section.blocks.first.settings.text != blank -%}
            {%- if section.blocks.first.settings.link != blank -%}
              <a
                href="{{ section.blocks.first.settings.link }}"
                class="announcement-bar__link link link--text focus-inset animate-arrow"
              >
            {%- endif -%}
            <p class="announcement-bar__message h5">
              <span>{{ section.blocks.first.settings.text | escape }}</span>
              {%- if section.blocks.first.settings.link != blank -%}
                {{- 'icon-arrow.svg' | inline_asset_content -}}
              {%- endif -%}
            </p>
            {%- if section.blocks.first.settings.link != blank -%}
              </a>
            {%- endif -%}
          {%- endif -%}
        </div>
      {% endcomment %}
      {%- if section.blocks.first.type == 'announcement' -%}
        <div
          class="announcement-bar{% if section.settings.show_social %} announcement-bar--one-announcement{% endif %}"
          role="region"
          aria-label="{{ 'sections.announcements.announcement' | t }}"
          id="Slide-{{ section.id }}-0"
          {{ section.blocks.first.shopify_attributes }}
        >
          {%- if section.blocks.first.settings.text != blank -%}
            {%- if section.blocks.first.settings.link != blank -%}
              <a
                href="{{ section.blocks.first.settings.link }}"
                class="announcement-bar__link link link--text focus-inset animate-arrow"
              >
            {%- endif -%}
            <p class="announcement-bar__message h5">
              <span>{{ section.blocks.first.settings.text }}</span>
              {%- if section.blocks.first.settings.link != blank -%}
                {{- 'icon-arrow.svg' | inline_asset_content -}}
              {%- endif -%}
            </p>
            {%- if section.blocks.first.settings.link != blank -%}
              </a>
            {%- endif -%}
          {%- endif -%}
        </div>
      {%- elsif section.blocks.first.type == 'urgency_announcement' -%}
        <div
          class="announcement-bar{% if section.settings.show_social %} announcement-bar--one-announcement{% endif %}"
          role="region"
          aria-label="{{ 'sections.announcements.announcement' | t }}"
          id="Slide-{{ section.id }}-0"
          {{ section.blocks.first.shopify_attributes }}
        >
          <div
            class="announcement-bar__announcement"
            role="region"
            aria-label="{{ 'sections.header.announcement' | t }}"
          >
            {%- if section.blocks.first.settings.text != blank -%}
              {%- if section.blocks.first.settings.link != blank -%}
                <a
                  href="{{ section.blocks.first.settings.link }}"
                  class="announcement-bar__link link link--text focus-inset animate-arrow"
                >
              {%- endif -%}

              <div class="announcement-bar">
                <div class="announcement-bar__content container">
                  <p class="announcement-bar__message h5" style="padding:0;min-height:0;">
                    <span>{{ section.blocks.first.settings.text }}</span>
                    {%- if section.blocks.first.settings.link != blank -%}
                      {{- 'icon-arrow.svg' | inline_asset_content -}}
                    {%- endif -%}
                  </p>
                  <div class="countdown-display" id="countdown-display-{{ section.id }}-0">
                    <p class="announcement-bar__message h5 announcement-bar__message_width_restrict">
                      {{ section.blocks.first.settings.countdown_text }}
                    </p>
                    <span id="countdown-timer-{{ section.id }}-0" class="countdown-timer" style="display: none;"></span>
                    <div class="countdown-item">
                      <span class="countdown-value days h5">--</span>
                      <span class="countdown-label h5">DAYS</span>
                    </div>
                    <span class="countdown-separator h5">:</span>
                    <div class="countdown-item">
                      <span class="countdown-value hours h5">--</span>
                      <span class="countdown-label h5">HRS</span>
                    </div>
                    <span class="countdown-separator h5">:</span>
                    <div class="countdown-item">
                      <span class="countdown-value minutes h5">--</span>
                      <span class="countdown-label h5">MINS</span>
                    </div>
                    <span class="countdown-separator h5">:</span>
                    <div class="countdown-item">
                      <span class="countdown-value seconds h5">--</span>
                      <span class="countdown-label h5">SECS</span>
                    </div>
                  </div>
                </div>
              </div>

              {%- if section.blocks.first.settings.link != blank -%}
                {{- 'icon-arrow.svg' | inline_asset_content -}}
              {%- endif -%}

              {%- if section.blocks.first.settings.link != blank -%}
                </a>
              {%- endif -%}
            {%- endif -%}

            <style>
              .announcement-bar {
                background-color: #000;
                color: #fff;
                text-align: center;
                padding: 10px 0;
                font-family: Arial, sans-serif;
                width: 100%;
              }

              .announcement-bar__content {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
              }

              .announcement-bar__message_width_restrict {
                max-width: 5rem;
                text-align: left;
                margin-right: 1.5rem !important;
              }

              .announcement-bar__title {
                font-size: 24px;
                font-weight: bold;
                margin: 0;
              }

              .announcement-bar__message {
                margin: 0;
              }

              .countdown-display {
                display: flex;
                align-items: center;
                gap: 10px;
              }

              .countdown-item {
                display: flex;
                flex-direction: column;
                align-items: center;
              }

              .countdown-value {
                font-size: 24px;
                font-weight: bold;
              }

              .countdown-label {
                font-size: 12px;
                text-transform: uppercase;
              }

              .countdown-separator {
                font-size: 24px;
                font-weight: bold;
              }

              @media screen and (max-width: 768px) {
                .announcement-bar__content {
                  flex-direction: column;
                  gap: 10px;
                }

                .countdown-value {
                  font-size: 20px;
                }

                .countdown-label {
                  font-size: 10px;
                }
              }
            </style>

            <script>
              (function() {
                const targetYear = {{ section.blocks.first.settings.countdown_year | default: 2025 }};
                const targetMonth = {{ section.blocks.first.settings.countdown_month | default: 12 }} - 1;
                const targetDay = {{ section.blocks.first.settings.countdown_day | default: 31 }};
                const targetMinute = {{ section.blocks.first.settings.countdown_minute | default: 0 }};
                
                const targetDate = new Date(targetYear, targetMonth, targetDay);
                targetDate.setMinutes(targetMinute);
                
                const countdownTimer = document.getElementById("countdown-timer-{{ section.id }}-0");
                const daysElement = document.querySelector("#countdown-display-{{ section.id }}-0 .days");
                const hoursElement = document.querySelector("#countdown-display-{{ section.id }}-0 .hours");
                const minutesElement = document.querySelector("#countdown-display-{{ section.id }}-0 .minutes");
                const secondsElement = document.querySelector("#countdown-display-{{ section.id }}-0 .seconds");
                
                function updateCountdown() {
                  const now = new Date();
                  const difference = targetDate - now;
                  
                  var days = 0
                  var hours = 0
                  var minutes = 0
                  var seconds = 0
                  
                  if (difference > 0) {
                    days = Math.floor(difference / (1000 * 60 * 60 * 24));
                    hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
                    seconds = Math.floor((difference % (1000 * 60)) / 1000);
                  }
                  
                  countdownTimer.innerHTML = ` ${days} : ${hours} : ${minutes} : ${seconds}s`;
                  
                  daysElement.textContent = days;
                  hoursElement.textContent = hours;
                  minutesElement.textContent = minutes;
                  secondsElement.textContent = seconds;
                }
                
                updateCountdown();
                setInterval(updateCountdown, 1000);
              })();
            </script>
          </div>
        </div>
      {% endif %}
